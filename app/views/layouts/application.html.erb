<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller.controller_name %>">

  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>

  <div id="columns">

    <div id="side">
      <div id="time"> <%= Time.now.httpdate %></div>
      <ul>
        <li><a href="http://localhost:3000">Home</a></li>
        <li><a href="http://localhost:3000">Questions</a></li>
        <li><a href="http://localhost:3000">News</a></li>
        <%if session[:cart_id] %>
          <li><%=link_to('Show cart', cart_path(session[:cart_id]))%></li>
        <%end%>
        <li><%=link_to('Diagnostics', diagnostics_path)%></li>
      </ul>
    </div>
    
    <div id="main">
      <%= yield %>
    </div>

  </div>

</body>

</html>